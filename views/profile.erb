<!DOCTYPE HTML>
  <html>
    <head>
      <title><%= @user.username %> profile</title>
    </head>
      <body>
        <h1><%= @user.username %> profile</h1>
          <p>
            You are <%= @user.username %>
            Your email address is <%= @user.email %>
            Your properties:
            <% @properties.each do |property| %>
            <% if @user.id == property.user_id %>
            <%= property %>
            <%= property.id %>
            <%= property.address %>
            <div class="property-id">
              <form action="/properties/<%= property.id %>/update" method="post">
                <input id="<%= property.id %>" type="text" name="address" placeholder="Update address:">
                <input type="text" name="price" placeholder="Update price:">
                <input type="submit" value="<%= property.id %>-Update">
              </form>
            </div>
            <%= property.price %>
          <img src="<%= property.image %>">
        <% end %>
      <% end %>
    </p>
  </body>
</html>
